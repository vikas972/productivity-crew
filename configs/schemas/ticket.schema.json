{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ticket",
  "type": "object",
  "properties": {
    "ticket_id": {
      "type": "string",
      "pattern": "^[A-Z]+-[0-9]+$"
    },
    "project_id": {
      "type": "string",
      "pattern": "^PROJ-[A-Z]+$"
    },
    "epic_id": {
      "type": ["string", "null"],
      "pattern": "^EPIC-[A-Z]+-[0-9]+$"
    },
    "type": {
      "type": "string",
      "enum": ["Story", "Bug", "Task", "Spike"]
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "priority": {
      "type": "string",
      "enum": ["Low", "Medium", "High", "Critical"]
    },
    "story_points": {
      "type": ["integer", "null"],
      "minimum": 1,
      "maximum": 21
    },
    "reporter_id": {
      "type": "string",
      "pattern": "^PER-[0-9]+$"
    },
    "assignee_id": {
      "type": "string",
      "pattern": "^PER-[0-9]+$"
    },
    "status_timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["Backlog", "To Do", "In Progress", "Code Review", "Testing", "Done"]
          },
          "at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["status", "at"],
        "additionalProperties": false
      }
    },
    "comments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "author_id": {
            "type": "string",
            "pattern": "^PER-[0-9]+$"
          },
          "at": {
            "type": "string",
            "format": "date-time"
          },
          "body": {
            "type": "string"
          }
        },
        "required": ["author_id", "at", "body"],
        "additionalProperties": false
      }
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["name", "url"],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "ticket_id",
    "project_id",
    "type",
    "title",
    "description",
    "priority",
    "reporter_id",
    "assignee_id",
    "status_timeline",
    "comments",
    "attachments"
  ],
  "additionalProperties": false
}
